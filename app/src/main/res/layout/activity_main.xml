<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.w3d3_ex02.MainActivity">



    <EditText
        android:id="@+id/et_url"
        android:hint="@string/lbl_placeholder_insert_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="@string/lblbtn__get_result"
        android:onClick="doWithHandlerThread"
        android:id="@+id/btn_get_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="@string/lbl_btn_clear"
        android:onClick="clearContent"
        android:id="@+id/btn_clearContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_result"
        android:text="@string/lbl_tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

</LinearLayout>
